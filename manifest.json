{
    "manifest_version": 2,

    "name": "Surf Record",
    "description": "This extension aims at keeping a record of time you surfed over your selected websites.",
    "version": "1.0",


    "background": {
        "scripts": ["js/background.js" , "js/jquery.min.js"]
    },

    "chrome_url_overrides":{
        "newtab" : "index.html"
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
